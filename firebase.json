
{
  "apphosting": [
    {
      "backendId": "studio",
      "rootDir": "functions",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    },
    {
      "backendId": "paradise",
      "source": ".",
      "codebase": "paradise",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "functions",
        "rides",
        ".vscode",
        "Paradise Rides",
        "dataconnect/.dataconnect"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    },
    {
      "backendId": "paradiserides",
      "rootDir": "rides",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "functions"
      ]
    }
  ],
  "emulators": {
    "dataconnect": {
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    },
    "firestore": {
      "port": "8080"
    },
    "auth": {
      "port": "9099"
    },
    "hosting": {
      "port": "5000"
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "rewrites": [
      {
        "source": "**",
        "apphosting": {
          "backendId": "paradise"
        }
      }
    ]
  }
}
